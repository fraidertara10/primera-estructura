---
interface Props {
	title: string;
}

const { title } = Astro.props;
const products = [
	{
		icons: "",
		name: "producto 1"
	},
	{
		icons: "",
		name: "producto 2"
	},
	{
		icons: "",
		name: "producto 3"
	}

]
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<title>{title}</title>
	</head>
	<body>
		<div class="header" >
			<div class="container header_info">
				contenido clase
			</div>
		</div>
		<div class="container banner">
			banner
		</div>
		<nav class="container main_menu" >
			 
			<a href="/">Inicio</a>  <a href="/productos">productos</a>
		</nav>
		<div class="container list_products">
			{
				products.map((product) => <div>
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><ellipse cx="12.07" cy="7" rx="3" ry="1.71"></ellipse><path d="M12.07 22c4.48 0 8-2.2 8-5V7c0-2.8-3.52-5-8-5s-8 2.2-8 5v10c0 2.8 3.51 5 8 5zm0-18c3.53 0 6 1.58 6 3a2 2 0 0 1-.29.87c-.68 1-2.53 2-5 2.12h-1.39C8.88 9.83 7 8.89 6.35 7.84a2.16 2.16 0 0 1-.28-.76V7c0-1.42 2.46-3 6-3z"></path></svg>
					{product.name}
			</div>)
			}
			
		</div>
		<div class="container categories">
			categorias
		</div>
		<div class="container">
			<slot />
		</div>
		<div class="container footer">
			ESTE ES EL FOOTER
		</div>
	</body>
</html>
<style is:global>
	.main_menu{
		background-color:orange;
		display: flex;
		height: 40px;
		
		
	}
	.main_menu a { 
		display: flex;
		text-decoration: none;
		color: black;
		align-items: center;
		height: 100%;
		padding: 0 12px;
		transition: background 300ms ease-in-out;

	}
	.main_menu a:hover{
		background-color: rgb(190, 177, 160);
		
	}
	.header{
		background-color: orange;
	}
	.header_info{
		height: 80px;

	}
	.banner{
		height: 240px;
		
	}
	
	.container{
		max-width: 1280px;
		/* background: blue; */
		margin: 0 auto;
		
	}
	.list_products{
		display: flex;
		height: 40px;
		/* background-color: rgb(148, 25, 25); */
	}
	.list_products div{
		height: 100%;
		display: flex;
		max-width: 120;
		text-align: center;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		border: 1px solid gray;
		border-radius: 5px;
		margin-right: 4px;
	}
	.categories{
		height: 80px;
	}
	.footer{
		height: 50px;
	}

	html, body {
		margin: 0;
		padding: 0;
		font-family: system-ui, sans-serif;
		
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
